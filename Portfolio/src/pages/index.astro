                    const container = video.closest('.relative.overflow-hidden');
                    const btn = container?.querySelector('.video-toggle');

                    let userPaused = false;

                    const setBtnState = (playing) => {
                        if (!btn) return;
                        btn.dataset.state = playing ? 'playing' : 'paused';

                        const icon = btn.querySelector('.video-toggle-icon');
                        const label = btn.querySelector('span.hidden.sm\\:inline');

                        if (icon) icon.textContent = playing ? '‚è∏' : '‚ñ∂';
