                    // Click manual del usuario
                    if (btn) {
                        btn.addEventListener('click', async () => {
                            if (video.paused) {
                                userPaused = false;
                                try {
                                    await video.play();
                                    setBtnState(true);
                                } catch {}
                            } else {
                                userPaused = true;
                                video.pause();
                                setBtnState(false);
                            }
                        });
                    }

                    // IntersectionObserver (tu l√≥gica + respeto a pausa manual)
                    const io = new IntersectionObserver(
                        (entries) => {
                            entries.forEach(async (entry) => {
                                if (!entry.isIntersecting) {
